{
  "openapi": "3.0.1",
  "info": {
    "title": "Blog | v1",
    "contact": {
      "name": "Hugo",
      "email": "hugomarshall@gmail.com"
    },
    "version": "1.0.0"
  },
  "paths": {
    "/api/posts": {
      "get": {
        "tags": [
          "Blog"
        ],
        "description": "This endpoint returns all posts.",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/BlogPost"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Blog"
        ],
        "description": "This endpoint add a new post.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BlogPost"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/posts/{id}": {
      "get": {
        "tags": [
          "Blog"
        ],
        "description": "This endpoint returns a post by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "put": {
        "tags": [
          "Blog"
        ],
        "description": "This endpoint edit a post by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BlogPost"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "delete": {
        "tags": [
          "Blog"
        ],
        "description": "This endpoint delete a post by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/posts/{id}/comments": {
      "post": {
        "tags": [
          "Blog"
        ],
        "description": "This endpoint add a comment in a post by ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Comment"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BlogPost": {
        "required": [
          "id",
          "title",
          "content"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "The post ID.",
            "format": "int32"
          },
          "title": {
            "type": "string",
            "description": "Post Title."
          },
          "content": {
            "type": "string",
            "description": "Post Content."
          },
          "comments": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Comment"
            },
            "description": "Post Comments."
          }
        }
      },
      "Comment": {
        "required": [
          "postId",
          "author",
          "content"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "postId": {
            "type": "integer",
            "description": "Post ID.",
            "format": "int32"
          },
          "author": {
            "type": "string"
          },
          "content": {
            "type": "string",
            "description": "Comment Content."
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "Blog"
    }
  ]
}